<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
	<class name="org.blog.entity.Blog" table="blog">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="title" type="java.lang.String">
			<column name="title"></column>
		</property>
		<property name="subtitle" type="java.lang.String">
			<column name="subtitle"></column>
		</property>
		<property name="blog" type="java.lang.String">
			<column name="blog"></column>
		</property>
		<property name="tag" type="java.lang.String">
			<column name="tag"></column>
		</property>
		<property name="sort" type="java.lang.String">
			<column name="sort"></column>
		</property>
		<property name="createTime" type="java.lang.String">
			<column name="createTime"></column>
		</property>
		<property name="view" type="java.lang.Integer">
			<column name="view"></column>
		</property>
	</class>
</hibernate-mapping>
